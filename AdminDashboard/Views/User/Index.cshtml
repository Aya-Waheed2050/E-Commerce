@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1>All Users</h1>

@if(Model.Count() > 0)
{
    <table class="table table-striped table-hover">
       <thead>
            <tr>
                <th>@Html.DisplayNameFor(User => User.Id)</th>
                <th>@Html.DisplayNameFor(User => User.DisplayName)</th>
                <th>@Html.DisplayNameFor(User => User.UserName)</th>
                <th>@Html.DisplayNameFor(User => User.Email)</th>
                <th>@Html.DisplayNameFor(User => User.Roles)</th>
                <th>Action</th>
            </tr>
       </thead>

       <tbody>
           @foreach(var user in Model)
           {
               <tr>
                    <td>@user.Id</td>
                    <td>@user.DisplayName</td>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>@string.Join(',' , user.Roles.ToList())</td>
                    <td>
                        <a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@user.Id">Edit</a>
                    </td>
               </tr>
           }
       </tbody>
    </table>
}
else
{
	<div class="mt-3 p-3 alert-warning">
		<h2>There is no users</h2>
	</div>
}
@section Scripts
{
	<partial name="_ValidationScriptsPartial" />
}